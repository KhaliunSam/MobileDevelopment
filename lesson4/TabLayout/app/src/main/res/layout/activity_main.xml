<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Android Version"
        android:layout_margin="5dp"
        android:drawableBottom="Null"/>

    <EditText
        android:id="@+id/codeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Android Code Name"
        android:layout_margin="5dp"/>
    <Button
        android:id="@+id/addButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD"
        android:layout_margin="5dp"
        android:background="@color/butnBackground"
        android:textStyle="bold"/>

    <TableLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:orientation="vertical">
        <TableRow
            android:layout_margin="5dp"
            android:padding="5dp"
            android:background="@color/colorAccent">
            <TextView
                android:layout_height="wrap_content"
                android:text="Version" />

            <TextView
                android:layout_height="wrap_content"
                android:text="Code Name"
                android:visibility="visible" />
        </TableRow>
        <TableRow android:layout_margin="5dp"
            android:padding="5dp"
            android:background="@color/colorAccent">
            <TextView
                android:layout_height="wrap_content"
                android:text="Version 9.0" />
            <TextView
                android:layout_height="wrap_content"
                android:text="Pie" />
        </TableRow>
        <TableRow
            android:layout_margin="5dp"
            android:padding="5dp"
            android:background="@color/colorAccent">

            <TextView
                android:layout_height="wrap_content"
                android:text="Version 8.0" />

            <TextView
                android:layout_height="wrap_content"
                android:text="Oreo" />
        </TableRow>
    </TableLayout>

</LinearLayout>